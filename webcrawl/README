# execute scrapy crawler and save as json file
scrapy runspider spiders/NewsSpider.py -o hottitle.json

# use jq to make utf-8 json file readable by human
# make sure you have jq installed.
# visit https://stedolan.github.io/jq/
# or just use brew.
# $ brew install jq
cat hottitle.json | jq '.' > hottitle_utf8.json

# segament the content
python segament.py

# count ngrams
cat segmented.txt | python ngram_count.py